# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                       controllers.SocialOxpecker.index()
GET        /home                   controllers.SocialOxpecker.home()

#social
GET        /social/facebook        controllers.SocialOxpecker.facebook(code: String)
GET        /social/twitter         controllers.SocialOxpecker.twitter(code:  String)

# Content
# User
GET        /user/login             controllers.UserController.login()
GET        /user/loginPlay         controllers.UserController.loginPlay()
GET        /user/validate          controllers.UserController.validate(email: String, password: String)

##Devel
GET        /aboutus                controllers.SocialOxpecker.aboutus()

#forwarding
GET        /redirect               controllers.SocialOxpecker.redirect()


# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file           controllers.Assets.at(path="/public", file)
